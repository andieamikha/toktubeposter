# === Database (SQLite - no external service required) ===
DATABASE_FILE=data/tiktok_manager.db

# === JWT ===
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars!!
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# === Telegram ===
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# === AI / LLM ===
AI_PROVIDER=openai
AI_API_KEY=sk-your-api-key-here
AI_MODEL=gpt-4o

# === Application ===
FRONTEND_URL=http://localhost:3000
PORT=3001
NODE_ENV=development

# === Google Drive API ===
GOOGLE_API_KEY=your-google-api-key

# === TikTok Content Posting API ===
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3001/api/v1/tiktok-oauth/callback

# === YouTube Data API v3 (OAuth2 for upload) ===
YOUTUBE_CLIENT_ID=your-google-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-google-oauth-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/api/v1/youtube-oauth/callback
